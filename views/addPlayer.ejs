<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>defaultPage</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="bootstrap.min.css" />
    <link rel="stylesheet" href="common.css" />
  </head>
  <script>
    const playerAddedStatus = "<%-playerAdded.status%>";
    const playerAddedname = "<%-playerAdded.name%>";
    console.log(playerAddedStatus, playerAddedname);
    if (playerAddedStatus === "true") {
      setTimeout(() => {
        document.getElementById("alertMsg").style.display = "none";
      }, 2000);
    }
  </script>
  <body>
    <%- include('./components/header.ejs', {showDropdown:false}) %>
    <div class="mainBody">
      <h1>Add New Player</h1>
      <div class="gap"></div>
      <% if (playerAdded.status==true) {%>
      <div class="alert alert-success" role="alert" id="alertMsg">
        <%= playerAdded.name %> was added
      </div>
      <% } %>
      <div class="gap"></div>
      <form method="post" action="/add/player">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Name of Player"
            name="name"
            required
            style="max-width: 400px; margin: 0 auto; margin-bottom: 30px"
          />
          <input
            type="number"
            class="form-control"
            placeholder="Age of Player"
            name="age"
            required
            style="max-width: 400px; margin: 0 auto; margin-bottom: 30px"
          />
          <input
            type="text"
            class="form-control"
            placeholder="Primary Position"
            name="pos"
            required
            style="max-width: 400px; margin: 0 auto; margin-bottom: 30px"
          />
        </div>
        <br />
        <button class="btn btn-primary" type="submit">Add Player</button>
      </form>
    </div>
  </body>
</html>
